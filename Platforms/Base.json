{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 4,
        "minor": 0,
        "patch": 0
    },
    "$comment": [
        "Copyright (c) 2023-2025 Christian Hinkle, Brian Hinkle.",
        "Note: We abbreviate \"windows\" to \"win\" to help alleviate any filesystem pathname limit errors."
    ],
    "include": [
        "${sourceDir}/GeneralCMakePresets/Platforms/BaseDefaults.json",
        "${sourceDir}/GeneralCMakePresetsOverrides/Platforms/Base.json"
    ],
    "configurePresets": [
        {
            "name": "condition-host-win-base",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "condition-host-linux-base",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "condition-host-macos-base",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "win-base",
            "hidden": true,
            "description": "Note: You may inject and/or override any of our default values via the externally defined \"win-overrides-base\" preset.",
            "inherits": [
                "condition-host-win-base",
                "win-overrides-base",
                "win-defaults-base"
            ]
        },
        {
            "name": "linux-base",
            "hidden": true,
            "description": "Note: You may inject and/or override any of our default values via the externally defined \"linux-overrides-base\" preset.",
            "inherits": [
                "condition-host-linux-base",
                "linux-overrides-base",
                "linux-defaults-base"
            ]
        },
        {
            "name": "macos-base",
            "hidden": true,
            "description": "Note: You may inject and/or override any of our default values via the externally defined \"macos-overrides-base\" preset.",
            "inherits": [
                "condition-host-macos-base",
                "macos-overrides-base",
                "macos-defaults-base"
            ]
        }
    ]
}
