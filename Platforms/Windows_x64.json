{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 4,
        "minor": 0,
        "patch": 0
    },
    "$comment": [
        "Copyright (c) 2023-2025 Christian Hinkle, Brian Hinkle."
    ],
    "include": [
        "${sourceDir}/GeneralCMakePresets/Platforms/Windows.json",
        "${sourceDir}/GeneralCMakePresets/Generators/NinjaBase.json",
        "${sourceDir}/GeneralCMakePresets/Generators/VisualStudioBase.json"
    ],
    "configurePresets": [
        {
            "name": "win64-debug-ninja",
            "displayName": "Windows x64 Debug (Ninja)",
            "inherits": [
                "x64-ninja-base",
                "win-debug-ninja"
            ]
        },
        {
            "name": "win64-release-ninja",
            "displayName": "Windows x64 Release (Ninja)",
            "inherits": [
                "x64-ninja-base",
                "win-release-ninja"
            ]
        },
        {
            "name": "win64-debug-vs",
            "displayName": "Windows x64 Debug (Visual Studio)",
            "inherits": [
                "x64-win-vs-base",
                "win-debug-vs"
            ]
        },
        {
            "name": "win64-release-vs",
            "displayName": "Windows x64 Release (Visual Studio)",
            "inherits": [
                "x64-win-vs-base",
                "win-release-vs"
            ]
        }
    ]
}
