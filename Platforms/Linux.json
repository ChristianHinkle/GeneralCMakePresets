{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 4,
        "minor": 0,
        "patch": 0
    },
    "$comment": [
        "Copyright (c) 2023-2025 Christian Hinkle, Brian Hinkle."
    ],
    "include": [
        "${sourceDir}/GeneralCMakePresets/Base.json",
        "${sourceDir}/GeneralCMakePresets/Platforms/Base.json",
        "${sourceDir}/GeneralCMakePresets/Generators/Base.json"
    ],
    "configurePresets": [
        {
            "name": "linux-debug-default",
            "displayName": "Linux Debug (Default)",
            "inherits": [
                "debug-base",
                "linux-base",
                "common-base"
            ]
        },
        {
            "name": "linux-release-default",
            "displayName": "Linux Release (Default)",
            "inherits": [
                "release-base",
                "linux-base",
                "common-base"
            ]
        },
        {
            "name": "linux-debug-ninja",
            "displayName": "Linux Debug (Ninja)",
            "inherits": [
                "ninja-base",
                "linux-debug-default"
            ]
        },
        {
            "name": "linux-release-ninja",
            "displayName": "Linux Release (Ninja)",
            "inherits": [
                "ninja-base",
                "linux-release-default"
            ]
        },
        {
            "name": "linux-debug-unix-makefiles",
            "displayName": "Linux Debug (Unix Makefiles)",
            "inherits": [
                "unix-makefiles-base",
                "linux-debug-default"
            ]
        },
        {
            "name": "linux-release-unix-makefiles",
            "displayName": "Linux Release (Unix Makefiles)",
            "inherits": [
                "unix-makefiles-base",
                "linux-release-default"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "linux-debug",
            "displayName": "Linux Debug",
            "configurePreset": "linux-debug-default"
        },
        {
            "name": "linux-release",
            "displayName": "Linux Release",
            "configurePreset": "linux-release-default"
        }
    ],
    "testPresets": [
        {
            "name": "linux-debug",
            "displayName": "Linux Debug",
            "inherits": [
                "debug-base"
            ],
            "configurePreset": "linux-debug-default"
        },
        {
            "name": "linux-release",
            "displayName": "Linux Release",
            "inherits": [
                "release-base"
            ],
            "configurePreset": "linux-release-default"
        }
    ]
}
