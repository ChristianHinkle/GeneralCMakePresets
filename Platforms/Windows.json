{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 4,
        "minor": 0,
        "patch": 0
    },
    "$comment": [
        "Copyright (c) 2023-2025 Christian Hinkle, Brian Hinkle."
    ],
    "include": [
        "${sourceDir}/GeneralCMakePresets/Base.json",
        "${sourceDir}/GeneralCMakePresets/Platforms/Base.json",
        "${sourceDir}/GeneralCMakePresets/Generators/Base.json",
        "${sourceDir}/GeneralCMakePresets/Generators/NinjaBase.json",
        "${sourceDir}/GeneralCMakePresets/Generators/VisualStudioBase.json"
    ],
    "configurePresets": [
        {
            "name": "win-debug-default",
            "displayName": "Windows Debug (Default)",
            "inherits": [
                "debug-base",
                "win-base",
                "common-base"
            ]
        },
        {
            "name": "win-release-default",
            "displayName": "Windows Release (Default)",
            "inherits": [
                "release-base",
                "win-base",
                "common-base"
            ]
        },
        {
            "name": "win-debug-ninja",
            "displayName": "Windows Debug (Ninja)",
            "inherits": [
                "ninja-base",
                "win-debug-default"
            ]
        },
        {
            "name": "win-release-ninja",
            "displayName": "Windows Release (Ninja)",
            "inherits": [
                "ninja-base",
                "win-release-default"
            ]
        },
        {
            "name": "win-debug-vs",
            "displayName": "Windows Debug (Visual Studio)",
            "inherits": [
                "vs-base",
                "win-debug-default"
            ]
        },
        {
            "name": "win-release-vs",
            "displayName": "Windows Release (Visual Studio)",
            "inherits": [
                "vs-base",
                "win-release-default"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "win-debug",
            "displayName": "Windows Debug",
            "configurePreset": "win-debug-default"
        },
        {
            "name": "win-release",
            "displayName": "Windows Release",
            "configurePreset": "win-release-default"
        }
    ],
    "testPresets": [
        {
            "name": "win-debug",
            "displayName": "Windows Debug",
            "inherits": [
                "debug-base"
            ],
            "configurePreset": "win-debug-default"
        },
        {
            "name": "win-release",
            "displayName": "Windows Release",
            "inherits": [
                "release-base"
            ],
            "configurePreset": "win-release-default"
        }
    ]
}
